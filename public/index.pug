                .row.text-center
                    .col-sm-6.offset-md-3
                        .single
                            h3 Abonati-va la noutatile grivin
                            .col-md-12
                                label(for='subscribe_email') Adresa de email
                                input#subscribe_email.form-control.p-2(type='email' placeholder='Adresa de email')
                            .col-md-4.offset-md-4.col-xs-12.py-4
                                .button.round5.red.trans_200.w-100
